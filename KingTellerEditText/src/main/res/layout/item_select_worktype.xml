<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aaron="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_layout_off_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_delete_layout"
            android:minHeight="@null"
            android:minWidth="@null" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_add_layout"
            android:minHeight="@null"
            android:minWidth="@null" />

    </LinearLayout>

    <com.mview.medittext.view.KingTellerEditText
        android:id="@+id/workType"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_layout_height"
        aaron:fieldName="workType"
        aaron:fieldRequested="true"
        aaron:fieldTitle="工作类别："
        aaron:fieldType="Select"
        android:background="@drawable/btn_layout_off_bg"
        android:paddingLeft="@dimen/common_padding5"
        android:paddingRight="@dimen/common_padding5" />


</LinearLayout>